* Alarm to dead by time

#+BEGIN_SRC C :noweb yes
  #include <unistd.h>
  #include <stdio.h>
  #include <stdlib.h>
  #include <signal.h>

  int main()
  {

	alarm(1); <<</>> 
	</>> recv  to die after 1s

	int max = 50;
	while(max--)
		printf("I will die\n");
  	<</>> alarm(0); cancal alarm

	return 0;
  }
#+END_SRC

